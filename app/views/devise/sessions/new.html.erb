<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 ">
      <h2>Log in</h2>
        
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <form action="/users/sign_in" accept-charset="UTF-8" method="post">
          <div class="field">
            <%= f.label :name %>
            <br>
            <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "name" %>
          </div>
            
          <div class="field">
            <%= f.label :password %>
            <br>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
          </div>
            
          <div class="field">
            <input name="user[remenber_me]" type="hidden" value="0" autocomplete="off">
            <input type="checkbox" value="1" name="user[remenber_me]" id="user_remenber_me">
            <label for="user_remenber_me">Remenber me</label>
          </div>
          <div class="action">
            <%= f.submit "Log in", class:"btn btn-sm btn-primary" %>
          </div>
        </form>
      <% end %>
      <a href="/users/sign_up">Sign up</a>
      <br>
      <a href="/users/password/new">Forgot your password?</a>
    </div>
  </div>
</div>