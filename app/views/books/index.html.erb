<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
            <tr>
              <th>name</th>
              <th>name</th>
            </tr>
            <tr>
              <th>introduction</th>
              <th></th>
            </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to 'Edit',edit_user_path, class: "btn btn-outline-secondary btn-block" %>
          <i class="fas fa-user-cog" aria-hidden="true">: :before</i>
      </div>
      <h2 class="mt-3">New book</h2>

      <%= form_with model: Book, url: '/books', method: :post do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
          <%= f.text_field :book_title %>
        </div>

        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :book_body %>
        </div>

        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hobver table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to "Show",book_path(book.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

